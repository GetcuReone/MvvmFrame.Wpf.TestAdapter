<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net472</TargetFramework>
    <DocumentationFile>MvvmFrame.Wpf.TestAdapter.xml</DocumentationFile>
    <RootNamespace>GetcuReone.MvvmFrame.Wpf.TestAdapter</RootNamespace>
    
    <Authors>GetcuReone</Authors>
    <PackageId>MvvmFrameWpf.TestAdapter</PackageId>
    <Product>MvvmFrameWpf.TestAdapter</Product>
    <Description>This library is designed to simplify testing applications created using the library MvvmFrame.Wpf</Description>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/GetcuReone/MvvmFrame.Wpf.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageProjectUrl>https://github.com/GetcuReone/MvvmFrame.Wpf.TestAdapter/wiki</PackageProjectUrl>
    <PackageTags>wpf frame mvvm mvvmframe testadapter getcureone combopatterns tests test</PackageTags>
    <PackageReleaseNotes>Restructuring</PackageReleaseNotes>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <Copyright>Copyright © 2019 GetcuReone</Copyright>
    <NeutralLanguage>en-US</NeutralLanguage>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>..\GetcuReone.snk</AssemblyOriginatorKeyFile>
    <DelaySign>false</DelaySign>
    <AssemblyVersion>$(majorVersion).0.0.0</AssemblyVersion>
    <FileVersion>$(majorVersion).0.0.0</FileVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE-2.0.txt">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="..\..\dev-pipelines.yml" />
    <None Include="..\..\master-pipelines.yml" />
    <None Include="..\..\release-pipelines.yml" />
    <None Include="..\..\pipeline_steps\step_restore_build_pack.yml" Link="pipline_steps\step_restore_build_pack.yml" />
    <None Include="..\..\pipeline_steps\step_run_all_tests.yml" Link="pipline_steps\step_run_all_tests.yml" />
    <None Include="..\..\pipeline_steps\step_install_snk.yml" Link="pipline_steps\step_install_snk.yml" />
    <None Include="..\..\pipeline_steps\step_copy_nuget_to_artifacts.yml" Link="pipline_steps\step_copy_nuget_to_artifacts.yml" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MvvmFrame.root" Version="6.0.0" />
    <PackageReference Include="PresentationFramework" Version="4.6.0" />
    <PackageReference Include="System.Threading.Tasks.Extensions" Version="4.5.3" />
  </ItemGroup>
</Project>